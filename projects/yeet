def cashier
    puts "please insert the name of the product"
    product = gets.chomp
    puts "please insert the cost of this item"
    cost = gets.chomp.to_f
    puts " please insert customers payment amount"
    payment = gets.chomp.to_f
    change = payment - cost
    puts " you bought 1 #{product} which cost $#{cost} your change is $#{change}"
end
 
cashier

arr = [1, 2, 3, 4, 5, 6, 7]
 arr.each do |numbers|
    puts "#{numbers}"
 end

